[Trigger]
Operation = Upgrade
Operation = Install
Type = Package
Target = pacman-mirrorlist

[Action]
Description = Updating pacman-mirrorlist with reflector and removing pacnew
When = PostTransaction
Depends = bash
Depends = coreutils
Depends = reflector
Exec = /bin/bash -c "reflector --score 30 --fastest 10 --sort rate --save /etc/pacman.d/mirrorlist; if [[ -f /etc/pacman.d/mirrorlist.pacnew ]]; then rm /etc/pacman.d/mirrorlist.pacnew; fi"
