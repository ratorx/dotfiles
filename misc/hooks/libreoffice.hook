[Trigger]
Operation = Upgrade
Operation = Install
Type = Package
Target = libreoffice-fresh

[Action]
Description = Remove unused libreoffice desktop files
When = PostTransaction
Depends = coreutils
Exec = /usr/bin/rm /usr/share/applications/libreoffice-base.desktop /usr/share/applications/libreoffice-startcenter.desktop /usr/share/applications/libreoffice-xsltfilter.desktop /usr/share/applications/libreoffice-math.desktop
