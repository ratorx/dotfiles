# Aliases
alias code="code-insiders"
alias e="$EDITOR"

# Utilities
alias ls="ls -x --color=auto"
alias la="ls -a"
alias lh="ls -d .*"

alias mv="mv -v"
alias rm="rm -iv"
alias cp="cp -v"

alias ip="curl ipinfo.io/ip"

# Git Aliases
alias gs="git status -sb"

alias gd="git diff"
alias gpl="git pull"
alias gps="git push"
alias gcl="git clone"
alias gf="git fetch"
alias gco="git checkout"

alias ga="git add"
alias gaa="git add ."

alias gc="git commit -m"
alias gca="git commit -am"
