# variables
set $mod Mod4

set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"
set $email "91"
set $messenger "92"
set $game "93"

set $scripts ~/.config/i3/scripts

set $border 20

# desktop utilities
## panel
exec_always --no-startup-id ~/.config/polybar/launch.sh
## lockscreen on startup
exec --no-startup-id $scripts/lock wallpaper change
## compositor
exec --no-startup-id compton --config ~/.config/compton/compton.conf
## application launcher
exec --no-startup-id QT_AUTO_SCREEN_SCALE_FACTOR=0 QT_SCALE_FACTOR=1 QT_QPA_PLATFORMTHEME=gtk2 /usr/bin/zsh -c albert
## screen colour adjuster
exec --no-startup-id redshift
## notification daemon
exec --no-startup-id dunst
## disk automounter
exec --no-startup-id udiskie -ant2 -f filebrowser

## applications
exec --no-startup-id dropbox

# workspace assignments
## window
assign [title="^Stardew Valley$"] $game
for_window [title="^Stardew Valley$"] fullscreen enable

## floating
for_window [title="Settings â€” Albert"] floating enable
for_window [class="mpv"] floating enable
for_window [class="feh"] floating enable
for_window [class="imv"] floating enable

## scratchpad
for_window [class="Spotify"] move to scratchpad, focus

# key binds
## general
floating_modifier $mod

## application
bindsym $mod+d exec --no-startup-id albert toggle
bindsym $mod+l exec --no-startup-id $scripts/lock wallpaper
bindsym $mod+Return exec --no-startup-id alacritty -e tmux

## i3 session management
bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart
bindsym $mod+Shift+e exit

## window focus
bindsym $mod+space focus mode_toggle
bindsym $mod+p focus parent
bindsym $mod+Shift+p focus child

bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

## window move
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

## window state
bindsym $mod+h split h
bindsym $mod+v split v

bindsym $mod+t layout tabbed
bindsym $mod+Shift+t layout default

bindsym $mod+m fullscreen toggle
bindsym $mod+a sticky toggle
bindsym $mod+f floating toggle

bindsym $mod+Shift+q kill

## scratchpad
bindsym $mod+s scratchpad show
bindsym $mod+Shift+s move to scratchpad

## workspace focus
bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
bindsym $mod+9 workspace $ws9
bindsym $mod+0 workspace $ws10

bindsym $mod+comma workspace $email
bindsym $mod+period workspace $messenger
bindsym $mod+slash workspace $game

bindsym $mod+Tab workspace back_and_forth

## container -> workspace
bindsym $mod+Shift+1 move container to workspace $ws1; workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2; workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3; workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4; workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5; workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6; workspace $ws6
bindsym $mod+Shift+7 move container to workspace $ws7; workspace $ws7
bindsym $mod+Shift+8 move container to workspace $ws8; workspace $ws8
bindsym $mod+Shift+9 move container to workspace $ws9; workspace $ws9
bindsym $mod+Shift+0 move container to workspace $ws10; workspace $ws10

## workspace -> output
bindsym $mod+Ctrl+Left move workspace to output left
bindsym $mod+Ctrl+Down move workspace to output down
bindsym $mod+Ctrl+Up move workspace to output up
bindsym $mod+Ctrl+Right move workspace to output right

## container -> output
bindsym $mod+Shift+Ctrl+Left move container to output left
bindsym $mod+Shift+Ctrl+Down move container to output down
bindsym $mod+Shift+Ctrl+Up move container to output up
bindsym $mod+Shift+Ctrl+Right move container to output right

## utilities
bindsym Print exec --no-startup-id $scripts/screenshot clipboard
bindsym Shift+Print exec --no-startup-id $scripts/screenshot clipboard-interactive

bindsym $mod+Print exec --no-startup-id $scripts/screenshot
bindsym $mod+Shift+Print exec --no-startup-id $scripts/screenshot interactive

## modes
mode "video" {
    bindsym Left exec --no-startup-id $scripts/floating border $border move left reset
    bindsym Right exec --no-startup-id $scripts/floating border $border move right reset

    bindsym $mod+b focus tiling; mode "default"
    bindsym Return focus tiling; mode "default"
    bindsym Escape focus tiling; mode "default"
}
bindsym $mod+b fullscreen disable; sticky enable; move to scratchpad; scratchpad show; mode "video"; exec --no-startup-id $scripts/floating border $border resize

mode "window" {
    bindsym Left move left 10 px
    bindsym Down move down 10 px
    bindsym Up move up 10 px
    bindsym Right move right 10 px

    bindsym Shift+Left resize shrink width 20 px or 10 ppt
    bindsym Shift+Down resize grow height 20 px or 10 ppt
    bindsym Shift+Up resize shrink height 20 px or 10 ppt
    bindsym Shift+Right resize grow width 20 px or 10 ppt

    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym $mod+e mode "default"
}
bindsym $mod+e mode "window"

## function keys
bindsym XF86AudioPlay exec playerctl play-pause
bindsym XF86AudioStop exec playerctl stop
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous

bindsym XF86AudioRaiseVolume exec --no-startup-id $scripts/volume up 5
bindsym XF86AudioLowerVolume exec --no-startup-id $scripts/volume down 5
bindsym XF86AudioMute exec --no-startup-id $scripts/volume mute

bindsym XF86MonBrightnessUp exec --no-startup-id brillo -A 10
bindsym XF86MonBrightnessDown exec --no-startup-id brillo -U 10

bindsym XF86Search exec --no-startup-id albert toggle

# settings
font pango:Ubuntu 13

default_border none
default_floating_border none
gaps inner $border

focus_follows_mouse no

## colours
set_from_resource $black i3wm.color0 #000000
set_from_resource $red i3wm.color1 #000000
set_from_resource $green i3wm.color2 #000000
set_from_resource $yellow i3wm.color3 #000000
set_from_resource $blue i3wm.color4 #000000
set_from_resource $magenta i3wm.color5 #000000
set_from_resource $cyan i3wm.color6 #000000
set_from_resource $white i3wm.color7 #000000
set_from_resource $darkgray i3wm.color8 #000000
set_from_resource $gray i3wm.color15 #000000

### class               border    backgr.    text    indicator child_border
client.focused          $magenta  $magenta   $black  $black    $black
client.focused_inactive $darkgray $darkgray  $gray   $black    $black
client.unfocused        $black    $black     $gray   $black    $black
client.urgent           $red      $red       $gray   $black    $black
client.placeholder      $black    $black     $white  $black    $black

client.background       $black

