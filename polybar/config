[colours]
background = ${xrdb:background:#2f343f}
background-alt = ${xrdb:color8:#686868}
foreground = ${xrdb:foreground:#eff0eb}
foreground-alt = ${xrdb:cursorColor:#97979b}

; ANSI Colours
black = ${colours.background-alt}
red = ${xrdb:color1:#ff5c57}
green = ${xrdb:color2:#5af78e}
yellow = ${xrdb:color3:#f3f99d}
blue = ${xrdb:color4:#57c7ff}
magenta = ${xrdb:color5:#ff6ac1}
cyan = ${xrdb:color6:#9aedfe}
white = ${xrdb:color7:#f1f1f0}

[bar/top]
monitor = ${env:MONITOR:}

bottom = false
fixed-center = true

width = 100%
height = 25

background = ${colours.background}
foreground = ${colours.foreground}

underline-size = 0

module-margin = 2
padding-right = 4

font-0 = Ubuntu:size=13;2
font-1 = Font Awesome 5 Free:size=12;2
font-2 = Font Awesome 5 Free:style=Solid:size=12;2
font-3 = Font Awesome 5 Brands:size=12;2

modules-left = i3
modules-center = title
modules-right = wired-laptop wired-desktop wireless-laptop wireless-desktop volume battery date

enable-ipc = true

; If true, the bar will not shift its
; contents when the tray changes
tray-detached = false
tray-position = right

; Tray icon max size
tray-maxsize = 20

tray-background = ${colours.background}

[module/title]
type = internal/xwindow

[module/i3]
type = internal/i3
pin-workspaces = true
strip-wsnumbers = true
index-sort = true
enable-click = true
enable-scroll = false
fuzzy-match = false

ws-icon-0 = 1;
ws-icon-1 = 2;
ws-icon-2 = 98;
ws-icon-3 = 99;
ws-icon-default = 

format = <label-state> <label-mode>

label-mode = %mode%
label-mode-background = ${colours.background}
label-mode-foreground = ${colours.magenta}
label-mode-padding = 0

label-focused = %icon%
label-focused-foreground = ${colours.foreground}
label-focused-background = ${colours.blue}
label-focused-padding = 3

label-unfocused = %icon%
label-unfocused-foreground = ${colours.foreground}
label-unfocused-background = ${colours.background}
label-unfocused-padding = 3

label-visible = %icon%
label-visible-foreground = ${colours.foreground}
label-visible-background = ${colours.background-alt}
label-visible-padding = 3

label-urgent = %icon%
label-urgent-foreground = ${colours.foreground}
label-urgent-background = ${colours.magenta}
label-urgent-padding = 3

[module/battery]
type = internal/battery
battery = BAT0
adapter = AC
full-at = 99
polling = 1

format-charging =   <label-charging>
format-charging-foreground = ${colours.green}

label-charging = %percentage%%
label-charging-foreground = ${colours.foreground}

format-discharging = <ramp-capacity>  <label-discharging>
format-discharging-foreground = ${colours.foreground}
label-discharging = "%percentage%%"

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 

format-full = <label-full>
label-full = 
label-full-foreground = ${colours.green}

[module/date]
type = internal/date

interval = 1.0

time =   %H:%M
time-alt =   %A, %d %B %Y

label = "%time%"
label-font = 3
label-foreground = ${colours.foreground}

[network]
format-connected = <label-connected>
format-disconnected = <label-disconnected>

[wired]
inherit = network
label-connected =  
label-connected-foreground = ${colours.green}
label-disconnected = 
label-disconnected-foreground = ${colours.red}

[wireless]
inherit = network
label-connected = "  %{F#eff0eb}%essid%%{F-}"
label-connected-foreground = ${colours.green}
label-disconnected = "  "
label-disconnected-foreground = ${colours.red}

[module/wired-laptop]
inherit = wired
type = internal/network
interface = enp57s0u1u4

[module/wired-desktop]
inherit = wired
type = internal/network
interface = enp0s31f6

[module/wireless-laptop]
inherit = wireless
type = internal/network
interface = wlp58s0

[module/wireless-desktop]
inherit = wireless
type = internal/network
interface = wlp3s0

[module/volume]
type = internal/volume
master-mixer = Master

format-volume = "<ramp-volume>  <label-volume>"

label-volume = %percentage%%
label-volume-foreground = ${colours.foreground}

label-muted = " "
label-muted-foreground = ${colours.red}

ramp-volume-0 = 
ramp-volume-1 = 

reverse-scroll = true

[settings]
format-foreground = ${colours.foreground}
format-background = ${colours.background}

