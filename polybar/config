[colours]
background = ${xrdb:background:#2f343f}
background-alt = ${xrdb:color8:#686868}
foreground = ${xrdb:foreground:#eff0eb}
foreground-alt = ${xrdb:cursorColor:#97979b}

; ANSI Colours
black = ${colours.background-alt}
red = ${xrdb:color1:#ff5c57}
green = ${xrdb:color2:#5af78e}
yellow = ${xrdb:color3:#f3f99d}
blue = ${xrdb:color4:#57c7ff}
magenta = ${xrdb:color5:#ff6ac1}
cyan = ${xrdb:color6:#9aedfe}
white = ${xrdb:color7:#f1f1f0}

[params]
padding = 3
margin = 1

[bar/top]
monitor = ${env:MONITOR:}

bottom = false
fixed-center = true

width = 100%
height = 25

background = ${colours.background}
foreground = ${colours.foreground}

underline-size = 0

module-margin = ${params.margin}

font-0 = Ubuntu:size=13;3
font-1 = Font Awesome 5 Free:size=12;2
font-2 = Font Awesome 5 Free:style=Solid:size=12;2
font-3 = Font Awesome 5 Brands:size=12;2
font-4 = Ubuntu:style=Bold:size=14;3

modules-left = workspaces layout
modules-center = title
modules-right = device laptop-wired desktop-wired laptop-wireless volume battery date

enable-ipc = true

; If true, the bar will not shift its
; contents when the tray changes
tray-detached = false
tray-position = right

; Tray icon max size
tray-maxsize = 22

tray-padding = ${params.padding}
tray-margin = 10

tray-background = ${colours.blue}

include-file = $POLYBAR_MODULES/battery
include-file = $POLYBAR_MODULES/device
include-file = $POLYBAR_MODULES/date
include-file = $POLYBAR_MODULES/i3
include-file = $POLYBAR_MODULES/network
include-file = $POLYBAR_MODULES/title
include-file = $POLYBAR_MODULES/volume

[settings]
format-foreground = ${colours.foreground}
format-background = ${colours.background}

