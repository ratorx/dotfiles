[user]
	email = reetobratachatterjee@gmail.com
	name = Reeto Chatterjee
[core]
	excludesfile = ~/.gitignore_global
	pager = diff-so-fancy | less --tabs=4 -RFX
	autocrlf = input
[color]
	ui = true
[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22
[color "diff"]
	meta = 227
	frag = magenta bold
	commit = 227 bold
	old = red bold
	new = green bold
	whitespace = red reverse
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[alias]
	root = !pwd
    lg = log --oneline
    pl = pull
    ps = push
    co = checkout
    df = diff
    cl = clone
    f = fetch
    mg = merge
    su = submodule update
    rs = reset
    l = !~/.local/share/git/log
    # Status
    s = status -s
    st = status
    # Commit
    c = commit
    cm = commit -m
    cam = commit -a -m
    # Add
    a = add
    aa = add .
