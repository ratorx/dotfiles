[global]
### Display ###

# monitor = 0
follow = keyboard

sort = yes
indicate_hidden = no
shrink = no
transparency = 0

idle_threshold = 0
geometry = "325x4-20+45"
notification_height = 0
separator_height = 1
padding = 5
horizontal_padding = 5
frame_width = 0

background = "#f1f1f0"
foreground = "#2f343f"
frame_color = "#f1f1f0"

# Define a color for the separator.
# possible values are:
#  * auto: dunst tries to find a color fitting to the background;
#  * foreground: use the same color as the foreground;
#  * frame: use the same color as the frame;
#  * anything else will be interpreted as a X color.
separator_color = '#2f343f'

mouse_left_click = do_action
mouse_middle_click = none
mouse_right_click = close_all

### Text ###
font = Ubuntu 12
line_height = 0
markup = full
format = "<span font_variant='smallcaps'><b>%s</b></span>\n%b"
alignment = left
show_age_threshold = -1
word_wrap = no
ellipsize = end
ignore_newline = no
# set true for non-test
stack_duplicates = false
hide_duplicate_count = false
show_indicators = yes

### Icons ###
icon_position = left
max_icon_size = 48
icon_path = /usr/share/icons/Numix/48/status/:/usr/share/icons/Numix/48/devices/:/usr/share/icons/Numix-Circle/48/apps

### History ###

sticky_history = yes
history_length = 10

### Misc/Advanced ###

browser = /usr/bin/xdg-open
always_run_script = true
