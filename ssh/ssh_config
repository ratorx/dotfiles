ControlMaster auto
ControlPath ~/.ssh/ctrl-%r@%h:%p

# Enable canonicalization only for hosts which don't have a . in it
# Prevents performance penalty when using a normal domain (e.g. cloning from GitHub)
Match host !*.*,*
	CanonicalizeHostname yes
	CanonicalDomains home

# Local Network
Host *.lan
	CheckHostIP no

# Work
Host kronos
	HostName kronos.lon.corp.google.com
	ControlPersist 15h

Host iapetus
	HostName iapetus.fra.corp.google.com
	ControlPersist 15h

# External
Host hades
	HostName hades.ree.to
