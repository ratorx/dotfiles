ControlMaster auto
ControlPath ~/.ssh/ctrl-%r@%h:%p

# Enable canonicalization only for hosts which don't have a . in it
# Prevents performance penalty when using a normal domain (e.g. cloning from GitHub)
Match host !*.*,*
	CanonicalizeHostname yes
	CanonicalDomains lan

# Local Network
Host *.lan
	CheckHostIP no

# Work
Host kronos
	HostName kronos.lon.corp.google.com
	ControlPersist 15h

Host iapetus
	HostName iapetus.c.googlers.com
	ControlPersist 15h

# External
Host srcf
  HostName shell.srcf.net
  User rc691

Host storage
  HostName u334623.your-storagebox.de
  User u334623
  Port 23
